<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="200dp"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loading_dialog_style"
    android:alpha="0.5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loading_gif"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/hom_inter_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        app:layout_constraintLeft_toLeftOf="@+id/loading_gif"
        app:layout_constraintRight_toRightOf="@+id/loading_gif"
        app:layout_constraintTop_toBottomOf="@+id/loading_gif"
        android:textSize="16sp"
        android:layout_margin="6dp" />
</androidx.constraintlayout.widget.ConstraintLayout>